<h1>Merchants</h1>

<p><b>Add A New Merchant:</b></p>

<form action="/banked/merchants" method="POST">

  <label for="name">Merchant Name:</label>
  <input type="text" name="name" id="name" required/>

  <input type="submit" value="Add Merchant">

</form>

<p><b>Filter Merchants by Value:</b></p>

<form action="/banked/merchants/filter_value" method="POST">

  <label for="value-select"></label>
  <select name="operator" id="value-select">
    <option value="less">Less Than</option>
    <option value="greater">Greater Than</option>
  </select>

  <label for="value">Value: £</label>
  <input type="number" name="value" id="value" required/>

  <input type="submit" value="Filter By Value">

</form>

<a href="/banked/merchants">Reset Filter</a>

<p><b>All Current Merchants:</b></p>

<% @merchants.each do |merchant| %>

  <p>------------------------------</p>
  <p>Merchant ID: <%= merchant.id %></p>
  <p>Name: <a href="/banked/merchants/<%= merchant.id %>"><%= merchant.name %></a></p>
  <p>Total Spend: £<%= "%.2f" % Merchant.sum_merchant_values(merchant.id) %></p>

<% end %>
